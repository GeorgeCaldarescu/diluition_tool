WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols: 1
        Label:
            text: "Dilution tool"

        GridLayout:
            cols: 2
            Button:
                text: "Agrobacteria"
                on_release: 
                    app.root.current= "Agro"
                    root.manager.transition.direction = "right"
            
            Button:
                text: "Bradford"    
                on_release: 
                    app.root.current= "Bradford"
                    root.manager.transition.direction = "left"

<SecondWindow>:
    name: "Agro"
    Button:
        text: "Go back"
        on_release: 
            app.root.current= "main"
            root.manager.transition.direction = "left"

<ThirdWindow>:
    name: "Bradford"
    Button:
        text: "Go back"
        on_release: 
            app.root.current= "main"
            root.manager.transition.direction = "right"