<MainWindow>:
    name: "main"
    
    FloatLayout:
        Label:
            text: "Diluition tool for transient tobacco transformation and Bradford assay"
            font_size: 20
            pos_hint:{"y":0.3}
        
        Button:
            text: "Agrobacteria"
            size_hint: 0.3, 0.3
            pos_hint: {"x": 0.15, "y":0.2}
            on_release: 
                app.root.current= "Agro"
                root.manager.transition.direction = "right"
        Button:
            text: "Bradford"
            size_hint: 0.3, 0.3
            pos_hint: {"x": 0.55, "y":0.2}
            on_release: 
                app.root.current= "Bradford"
                root.manager.transition.direction = "left"

