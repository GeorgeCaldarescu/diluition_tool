WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:

<MainWindow>:
    name: "main"
    
    FloatLayout:
        Label:
            text: "Diluition tool for transient tobacco transformation and Bradford assay"
            text_size: root.width, None
            size: self.texture_size
            halign: "center"
            font_size: self.width/30
            pos_hint: {"x":0.01,"y":0.3}
        
        Button:
            text: "Agrobacteria"
            halign: "center"
            valign: "center"
            text_size: root.width, None
            size: self.texture_size
            font_size: self.width/10
            size_hint: 0.3, 0.3
            pos_hint: {"x": 0.15, "y":0.2}
            on_release: 
                app.root.current= "Agro"
                root.manager.transition.direction = "right"
        Button:
            text: "Bradford"
            halign: "center"
            valign: "center"
            text_size: root.width, None
            size: self.texture_size
            font_size: self.width/10
            size_hint: 0.3, 0.3
            pos_hint: {"x": 0.55, "y":0.2}
            on_release: 
                app.root.current= "Bradford"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name : "Agro"
    agro: agro
    od: od
    result: result
    
    FloatLayout:

        Button:
            text: "Go back"
            size_hint: 0.1, 0.1    
            on_release: 
                app.root.current= "main"
                root.manager.transition.direction = "left"

        Label: 
            text: "Write the desired agro concentration"
            text_size: root.width, None
            size: self.texture_size
            font_size: self.width/30
            pos_hint:{"x":0.05,"y":0.3}
        
        TextInput:
            multiline: False
            id: agro
            size_hint: 0.1, 0.1
            pos_hint:{"x":0.7,"top":0.85}

        Label: 
            text: "Write OD value"
            text_size: root.width, None
            size: self.texture_size
            font_size: self.width/30
            pos_hint:{"x":0.05,"y":0.05}
        
        TextInput:
            multiline: False
            id: od
            size_hint: 0.1, 0.1
            pos_hint:{"x":0.7,"top":0.60}
        
        Label:
            id: result
            text: "No result"
            text_size: root.width, None
            size: self.texture_size
            font_size: self.width/30
            pos_hint:{"x":0.05, "y": -0.15}
        
        Button:
            text: "Calculate"
            size_hint: 0.1, 0.1
            pos_hint: {"x": 0.7, "top":0.40}
            on_release:
                root.btn()
        





<ThirdWindow>:
    name: "Bradford"
    conc: conc
    odB: odB

    FloatLayout:
        
        Button:
            text: "Go back"
            size_hint: 0.1, 0.1
            on_release: 
                app.root.current= "main"
                root.manager.transition.direction = "right"
        Label: 
            text: "Write the desired protein concentration"
            text_size: root.width, None
            size: self.texture_size
            font_size: self.width/30
            pos_hint:{"x":0.05,"y":0.3}
            
        TextInput:
            multiline: False
            id: conc
            size_hint: 0.1, 0.1
            pos_hint:{"x":0.7,"top":0.85}

        Label: 
            text: "Write OD value"
            text_size: root.width, None
            size: self.texture_size
            font_size: self.width/30
            pos_hint:{"x":0.05,"y":0.05}
        
        TextInput:
            multiline: False
            id: odB
            size_hint: 0.1, 0.1
            pos_hint:{"x":0.7,"top":0.60}
        
        Button:
            text: "Calculate"
            size_hint: 0.1, 0.1
            pos_hint: {"x": 0.7, "top":0.40}
            on_release:
                root.btnBrad()